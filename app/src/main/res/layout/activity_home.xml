<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/graybg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="116dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/korean" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tvkoreanlanguage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Korean Language"
                android:textColor="#e1a8a8"
                android:textSize="25dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvkoreanlanguage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한국어"
                android:textColor="#e1a8a8"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutVocal"
        android:layout_width="251dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner">

        <ImageView
            android:id="@+id/imgvolcal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/tvvolcal"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tvvolcal"
            android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp"
            android:src="@drawable/volcal" />

        <TextView
            android:id="@+id/tvvolcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="Volcabulary"
            android:textStyle="bold"
            android:textColor="#161313"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvvolcal"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvvolcal"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:text="어휘"
            android:textStyle="bold"
            android:textColor="#161313"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutGrammar"
        android:layout_width="251dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner">

        <ImageView
            android:id="@+id/imggrammar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/grammar1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/imggrammar"
            android:layout_toRightOf="@+id/imggrammar"
            android:text="Grammar"
            android:textColor="#161313"
            android:textStyle="bold"
            android:textSize="25dp"
            android:id="@+id/tvgrammar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvgrammar"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tvgrammar"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="문법"
            android:textStyle="bold"
            android:textColor="#161313"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutConver"
        android:layout_width="251dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner">

        <ImageView
            android:id="@+id/imgconver"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_toLeftOf="@+id/tvconver"
            android:layout_toStartOf="@+id/tvconver"
            android:src="@drawable/letterc" />

        <TextView
            android:id="@+id/tvconver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Conversation"
            android:textColor="#161313"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvconver"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tvconver"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="대화"
            android:textStyle="bold"
            android:textColor="#161313"
            android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>
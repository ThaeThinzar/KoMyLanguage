<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green">

        <android.support.constraint.Guideline
            android:id="@+id/bg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/bg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <android.support.constraint.Guideline
            android:id="@+id/bg_btm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <android.support.constraint.Guideline
            android:id="@+id/bg_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <android.support.constraint.Guideline
            android:id="@+id/title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/title_btm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.18" />

        <android.support.constraint.Guideline
            android:id="@+id/tri_btm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <android.support.constraint.Guideline
            android:id="@+id/form_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bgrounded"
            android:backgroundTint="#076069"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/bg_btm"
            app:layout_constraintEnd_toStartOf="@id/bg_right"
            app:layout_constraintStart_toEndOf="@id/bg_left"
            app:layout_constraintTop_toBottomOf="@id/bg_top">

        </LinearLayout>

        <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
            android:id="@+id/tvPattern"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#2baba4"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Grammar"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/title_btm"
            app:layout_constraintEnd_toStartOf="@id/bg_right"
            app:layout_constraintStart_toEndOf="@id/title_left"
            app:layout_constraintTop_toBottomOf="@id/title_top" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:src="@drawable/shadow"
            app:layout_constraintBottom_toTopOf="@id/tri_btm"
            app:layout_constraintEnd_toStartOf="@id/bg_left"
            app:layout_constraintStart_toEndOf="@id/title_left"
            app:layout_constraintTop_toBottomOf="@id/title_btm" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/bg_btm"
            app:layout_constraintEnd_toStartOf="@id/bg_right"
            app:layout_constraintStart_toEndOf="@id/bg_left"
            app:layout_constraintTop_toBottomOf="@id/tri_btm">

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvMmMeaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Myanmar"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="15dp"
                app:customFont="fonts/zawgyi.tff" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvEngMeaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Pattern"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#fff"
                android:textSize="15dp" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvForm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#fff"
                android:text="Pattern"
                android:textSize="10dp" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvForm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Pattern"
                android:textColor="#fff"
                android:textSize="10dp" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvForm3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#fff"
                android:text="Pattern"
                android:textSize="10dp" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvForm4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Pattern"
                android:textColor="#fff"
                android:textSize="10dp" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgrounded"
                android:backgroundTint="#519def"
                android:padding="5dp"
                android:text="Example:"
                android:textColor="#fff"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvMnEg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Example Myanmar"
                android:textColor="#FFAB00"
                android:textSize="15dp"
                android:textStyle="bold"
                app:customFont="fonts/zawgyi.ttf" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvEngEg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Example English"
                android:textColor="#00E676"
                android:textSize="15dp" />

            <com.thaethinzarkhaingsoe.myngapaw.mylibrary.TextViewPlus
                android:id="@+id/tvKorEg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Example Korean"
                android:textColor="#1A237E"
                android:textSize="15dp" />
        </LinearLayout>

</android.support.constraint.ConstraintLayout>